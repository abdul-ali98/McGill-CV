<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/hello_first_fragment"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textview_first">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:hint="Full Name"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:hint="Email"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:hint="Phone Number"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/major_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp" />

        <Spinner
            android:id="@+id/minor_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When did you start school?"
            android:layout_marginTop="28dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:id="@+id/radioGroup_start">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018"
                android:id="@+id/start_year_2018"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="16dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019"
                android:id="@+id/start_year_2019"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="16dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020"
                android:id="@+id/start_year_2020"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="16dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021"
                android:id="@+id/start_year_2021"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="16dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022"
                android:id="@+id/start_year_2022"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="16dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/graduation_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When did you start school?"
            android:layout_marginTop="0dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/graduation_year"
            android:layout_marginTop="0dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:id="@+id/radioGroup_graduation">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021"
                android:id="@+id/graduation_year_2021"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="16dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022"
                android:id="@+id/graduation_year_2022"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="16dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023"
                android:id="@+id/graduation_year_2023"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="16dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024"
                android:id="@+id/graduation_year_2024"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="16dp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022"
                android:id="@+id/graduation_year_2025"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="16dp"/>
        </RadioGroup>
        <Button
            android:id="@+id/first_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save"
            android:onClick="firstSaveOnClick"/>
        <Button
            android:id="@+id/button_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>